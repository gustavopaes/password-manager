{{> header}}
  <section class="section-login">
    <h1>Login</h1>
    <form name="login" action="/login" method="POST">
      <label for="userLogin">
        <input name="user.login" type="text" pattern="[.a-z0-9]+" value="" id="userLogin" placeholder="username" autofocus />
      </label>

      <label for="userPasswd">
        <input name="user.passwd" type="password" value="" id="userPasswd" placeholder="password" />
      </label>

      <button type="submit">Login</button>
    </form>
  </section>
{{> footer}}
